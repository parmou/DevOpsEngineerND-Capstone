{
   "kind":"ReplicationController",
   "apiVersion":"v1",
   "metadata":{
      "name":"web-resume",
      "labels":{
         "app":"web-resume"
      }
   },
   "spec":{
      "replicas":3,
      "selector":{
         "app":"web-resume"
      },
      "template":{
         "metadata":{
            "labels":{
               "app":"web-resume"
            }
         },
         "spec":{
            "containers":[
               {
                  "name":"web-resume",
                  "image":"parveshmourya/web-resume:latest",
                  "ports":[
                     {
                        "name":"http-server",
                        "containerPort":8080
                     }
                  ]
               }
            ]
         }
      }
   }
}
